---
import NanamiAvatar from "../components/NanamiAvatar.astro"
import SocialProfileLink from "../components/SocialProfileLink.astro"
import ThemeToggle from "../components/ThemeToggle.astro"
import DefaultLayout from "../layouts/DefaultLayout.astro"
---

<DefaultLayout>
  <div class="flex h-screen w-screen lg:items-center justify-center" slot="body">
    <div class="flex shrink-0 flex-col lg:flex-row gap-4 lg:w-screen p-12">
      <div class="flex lg:justify-end lg:w-1/2 lg:pr-8">
        <NanamiAvatar />
      </div>
      <div class="flex flex-col items-start justify-center lg:w-1/2 gap-row-4">
        <h1 class="text-4xl font-bold font-mono">
          &lt;Nanami Nakano/&gt;
        </h1>
        <SocialProfileLink />
        <p class="text-lg">
          A few word about you.
        </p>
      </div>
    </div>
    <div class="fixed right-8 bottom-8">
      <ThemeToggle />
    </div>
  </div>
</DefaultLayout>

<style>
    h1 {
        font-family: monaco, Consolas, "Lucida Console", monospace;
    }
</style>
